<div class="form-group col-10 mx-auto my-2 w-75 border p-3 bg-dark bg-gradient text-white bg-opacity-75">
    <form onsubmit="return updateProduct(this)">
        <fieldset>
            <div class="row my-3 mx-auto">
                <div class="col-4">
                    <label for="idDisable">ID#</label>
                    <input type="text" name="idDisable" id="idDisable" class="form-control" value="<%=producto._id%>" disabled="true">
                </div>
                <input type="text" name="id" id="id" class="form-control" value="<%=producto._id%>" hidden="true">
                <br>
                <div class="col-4">
                    <label for="name">Title</label>
                    <input type="text" name="name" id="name" class="form-control" value="<%=producto.name%>"
                    placeholder="Title Product" required>
                </div>
                <br>
                <div class="col-4 my-2">
                    <label for="description">Description</label>
                    <input type="text" name="description" id="description" class="form-control" value="<%=producto.description%>"
                        placeholder="Description Product" required>
                </div>
                <br>
                <div class="col-4 my-2">
                    <label for="category">Category</label>
                    <select class="form-select" aria-label="Default select example">
                        <option selected>Seleccione una categoria</option>
                        <option value="Perfumes">Perfumes</option>
                        <option value="Ropa">Ropa</option>
                        <option value="Calzado">Calzado</option>
                      </select>
                </div>
                <br>
                <div class="col-3 my-2">
                    <label for="price">Price ($)</label>
                    <input type="text" name="price" id="price" class="form-control" value="<%=producto.price%>"
                    placeholder="Ex. 150" required>
                </div>
                <br>
            </div>

            <div class="row my-3 mx-auto">
                <div class="col-4">
                    <label for="code">Code</label>
                    <input type="text" name="code" id="code" class="form-control" value="<%=producto.code%>"
                    placeholder="Code" required>
                </div>
            <br>
                <div class="col-3">
                    <label for="stock">Stock</label>
                    <input type="number" name="stock" id="stock" class="form-control" value="<%=producto.stock%>"
                    placeholder="Stock" required>
                </div>

            <div class="row my-3">
                <div class="col-10">
                    <label for="picture">Picture URL</label>
                    <input type="text" name="picture" id="picture" class="form-control" value="<%=producto.picture%>"
                    placeholder="Picture url"
                        required>
                </div>
            </div>
            <br>
            <div class="container-fluid my-1 p-1 text-center">
                <img src="<%=producto.picture%>" class="img-thumbnail rounded mx-auto" alt="Picture not Founded" width="200px" height="200px">
            </div>
            <div class="d-flex justify-content-center my-2">
                <button type="submit" class="btn btn-success mx-auto my-2">Update Product <i class="fa fa-save"></i></button>
                <a class="btn btn-primary my-2" href="/api/auth/index"> Back to Home <i class="fa fa-home"></i></a>
                <a class="btn btn-danger mx-auto my-2" href="/api/productos/delete/<%=producto._id%>">Delete <i class="fa fa-trash"></i></a>
            </div>
        </fieldset>
    </form>
</div>